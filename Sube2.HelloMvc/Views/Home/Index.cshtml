@{
    ViewData["Title"] = "Ana Sayfa";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }
        .jumbotron {
            background-color: #ffffff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 2rem 2rem;
            margin-top: 5rem;
        }
        .display-4 {
            font-weight: bold;
            color: #343a40;
        }
        .lead {
            font-size: 1.25rem;
            color: #6c757d;
        }
        .btn-primary, .btn-secondary {
            border-radius: 50px;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
        }
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }
        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
        }
        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }
        .container {
            max-width: 800px;
        }
        .alert {
            margin-top: 2rem;
        }
        .btn-close {
            background: none;
            border: none;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="jumbotron text-center">
            <h1 class="display-4">Hoş Geldiniz</h1>
            <p class="lead">Öğrenci ve ders yönetim sayfalarına gitmek için aşağıdaki butonları kullanabilirsiniz.</p>
            <hr class="my-4">
            @if (ViewBag.SuccessMessage != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @ViewBag.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <div class="d-flex justify-content-center mt-4">
                <a href="/Student" class="btn btn-primary btn-lg mx-2">Öğrenci Yönetimi</a>
                <a href="/Ders/AddDers" class="btn btn-secondary btn-lg mx-2">Ders Yönetimi</a>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    }
</body>
</html>
