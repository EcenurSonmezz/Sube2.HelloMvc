@model IEnumerable<Sube2.HelloMvc.Models.Ders>

@{
    ViewData["Title"] = "Dersler";
}

<div class="container mt-4">
    <h2>Dersler</h2>
    <p>
        <a asp-action="AddDers" class="btn btn-primary">Ders Ekle</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Ders Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DersAdi</td>
                <td>
                    <a asp-action="EditDers" asp-route-id="@item.DersId" class="btn btn-sm btn-outline-success">Düzenle</a>
                    <a asp-action="ConfirmDelete" asp-route-id="@item.DersId" class="btn btn-sm btn-outline-danger">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
