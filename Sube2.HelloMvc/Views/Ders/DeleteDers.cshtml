@model Sube2.HelloMvc.Models.Ders

@{
    ViewData["Title"] = "Ders Sil";
}

<h2>Ders Sil</h2>

<h3>Bu dersi silmek istediğinize emin misiniz?</h3>

<div>
    <h4>Ders</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ders Adı</dt>
        <dd class="col-sm-10">@Model.DersAdi</dd>
    </dl>
    
    <form asp-action="DeleteDers">
        <input type="hidden" name="DersId" value="@Model.DersId" />
        <button type="submit" class="btn btn-danger">Sil</button>
        <a asp-action="Index" class="btn btn-secondary">Geri</a>
    </form>
</div>
